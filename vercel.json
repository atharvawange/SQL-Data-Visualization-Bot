{
  "version": 2,
  "builds": [
    {
      "src": "app/app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/app.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  },
  "buildCommand": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": "output",
  "developmentCommand": "python app.py"
}
